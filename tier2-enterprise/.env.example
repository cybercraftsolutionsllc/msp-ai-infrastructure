# --- Tier 2: Enterprise Open-Weights ---

# Versions
OPEN_WEBUI_VERSION=main
VLLM_VERSION=latest
PGVECTOR_VERSION=pg16

# Ports
OPEN_WEBUI_PORT=3000
VLLM_PORT=8000
PGVECTOR_PORT=5432

# DB Credentials
POSTGRES_USER=app_user
POSTGRES_PASSWORD=replace_with_secure_password
POSTGRES_DB=webui_data

# Internal API Endpoints
# Open WebUI needs to know where vLLM and PGVector are
OPENAI_API_BASE_URL=http://vllm:8000/v1
OPENAI_API_KEY=vllm-not-needed
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@pgvector:5432/${POSTGRES_DB}

# Model Config
# Example: "meta-llama/Llama-3.3-70B-Instruct" OR "deepseek-ai/DeepSeek-V3"
VLLM_MODEL=meta-llama/Llama-3.3-70B-Instruct

# General
RESTART_POLICY=unless-stopped
