# --- Tier 3: Hybrid API Gateway ---

# Versions
OPEN_WEBUI_VERSION=main
LITELLM_VERSION=latest
PGVECTOR_VERSION=pg16

# Ports
OPEN_WEBUI_PORT=3000
LITELLM_PORT=4000
PGVECTOR_PORT=5432

# LiteLLM Master Keys
LITELLM_MASTER_KEY=sk-1234  # Replace with a secure key
LITELLM_SALT=replace-with-secure-salt

# DB Credentials (used by LiteLLM for tracking and Open WebUI for data)
POSTGRES_USER=lite_admin
POSTGRES_PASSWORD=replace_with_secure_password
POSTGRES_DB=litellm_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@pgvector:5432/${POSTGRES_DB}

# External API Keys (Used in litellm-config.yaml)
GEMINI_API_KEY=your_gemini_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Internal API Endpoints
# Open WebUI connects to LiteLLM
OPENAI_API_BASE_URL=http://litellm:4000/v1
OPENAI_API_KEY=${LITELLM_MASTER_KEY}

# General
RESTART_POLICY=unless-stopped
